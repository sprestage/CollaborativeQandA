  gem 'minitest'
  gem 'minitest-rails'
  gem 'minitest-rails-capybara'
  gem 'launchy'
  gem 'minitest-focus'
  gem 'minitest-colorize'
  gem 'pry-rails'
  gem 'pry-doc'
  gem 'pry-debugger'
  gem 'faker'
  gem 'figaro'
end

group :test do
  gem 'turn'
end

gem 'jquery-rails'

